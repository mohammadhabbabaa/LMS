@model Kurs.Models.Notification

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header -->
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">

        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card-wrapper">
                <!-- Custom form validation -->
                <div class="card" style="direction:rtl">
                    <!-- Card header -->
                    <div class="card-header">
                        <h3 class="mb-0"> اضاف استعلامات جديد</h3>
                    </div>
                    <!-- Card body -->
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.ToUserType, "الدرس", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("CoursID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ToUserType, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ToUserType, "توجيه الى", htmlAttributes: new { @class = "control-label col-md-2" })
                                   <div class="col-md-10">
                                    <select name="ToUserType" class="form-control">
                                        <option value="3">الطلاب</option>
                                        <option value="2">المعلمين</option>

                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Title,"العنوان", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, "الوصف",  htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", required = "required"  } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.EndDate, "وقت انتهاء الاستعلام", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control datepicker", @Value = DateTime.Now.ToString() } })
                                    @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="اضف" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                        }

                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
<button class="btn btn-success hidden" style="display:none;" data-toggle="notify" id="success" data-placement="top" data-align="center" data-type="success" data-icon="ni ni-bell-55">Success</button>

<button class="btn btn-warning hidden" style="display:none;" id="error" data-toggle="sweet-alert" data-sweet-alert="warning">Warning alert</button>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
@if (TempData["success"] != null)
{

    <script type="text/javascript">
        $(function () {
            $.notify({
                title: 'تمت العملية بنجاح',
                message: '.'

            }, {
                    placement: {
                        from: "top",
                        align: "center"
                    },
                    type: 'success'
                });

            // Click on the checkbox
        });
    </script>
}

@if (TempData["error"] != null)
{
    <script type="text/javascript">
        $(function () {
            $.notify({
                title: 'حدث خطاء',
                message: 'يرجى تكرار العميلة .'

            }, {
                    placement: {
                        from: "top",
                        align: "center"
                    },
                    type: 'danger'
                });

            // Click on the checkbox
        });
    </script>
}